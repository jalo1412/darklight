<p id="notice"><%= notice %></p>

<h1>Lecture Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Lecture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecture_courses.each do |lecture_course| %>
      <tr>
        <td><%= lecture_course.Course %></td>
        <td><%= lecture_course.Lecture %></td>
        <td><%= link_to 'Show', lecture_course %></td>
        <td><%= link_to 'Edit', edit_lecture_course_path(lecture_course) %></td>
        <td><%= link_to 'Destroy', lecture_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

