<p id="notice"><%= notice %></p>
<h3>General Information
</h3>
<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @student.last_name %>
</p>

<p>
  <strong>Course:</strong>
  <%= @student.Course.level + @student.Course.section %>
</p>

<p>
  <strong>Parent:</strong>
  <%= @student.Parent.name %>
</p>

<p>
  <strong>Matricule number:</strong>
  <%= @student.matricule_number %>
</p>

<p>
  <strong>Blood type:</strong>
  <%= @student.blood_type %>
</p>

<p>
  <strong>Allergy:</strong>
  <%= @student.allergy %>
</p>

<div class="horizontal-menu">
  <%= link_to 'Edit', edit_student_path(@student) %>
  |
  <%= link_to 'Back', students_path %>
</div>
</br>
<h3>Class Notes</h3>

<table>
<thead>
  <tr>
    <th>Date</th>
    <th>Description</th>

    <th colspan="3"></th>
  </tr>
</thead>
<% @notes.each do |n| %>
<tr>
  <tbody>
    <td><%= n.date %></td>
    <td><%= n.description%></td>
  </tr>
</tbody>
<% end %>
</table>

<h3>Grades</h3>

<table>
<thead>
  <tr>
    <th>Date</th>
    <th>Lecture</th>
    <th>Type of evaluation</th>
    <th>Grade</th>
    <th colspan="3"></th>
  </tr>
</thead>
<% @grades.each do |g| %>
<tr>
  <tbody>
    <td><%= g.Evaluation.date%></td>
    <td><%= g.Evaluation.Lecture_course.Lecture.name%></td>
    <td><%= g.Evaluation.Type_of_evaluation.name%></td>
    <td><%= g.grade%></td>
  </tr>
</tbody>
<% end %>
</table>
